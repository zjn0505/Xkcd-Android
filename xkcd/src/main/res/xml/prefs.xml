<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/pref_appearance"
        app:key="pref_key_appearance"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="pref_font"
            app:summaryOff="@string/pref_font_xkcd"
            app:summaryOn="@string/pref_font_normal"
            app:title="@string/pref_font"
            app:iconSpaceReserved="false" />

        <ListPreference
            app:defaultValue="1"
            app:dialogTitle="@string/pref_dark_mode"
            app:entries="@array/dark_mode_option_value"
            app:entryValues="@array/dark_mode_option"
            app:key="pref_dark"
            app:title="@string/pref_dark_mode"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_control"
        app:key="pref_key_control"
        app:iconSpaceReserved="false">

        <ListPreference
            app:defaultValue="arrow_1"
            app:dialogTitle="@string/pref_arrow_content"
            app:entries="@array/arrow_switch_by"
            app:entryValues="@array/arrow_switch_by_value"
            app:key="pref_arrow"
            app:title="@string/pref_arrow"
            app:iconSpaceReserved="false" />

        <ListPreference
            app:defaultValue="random_all"
            app:dialogTitle="@string/pref_random_title"
            app:entries="@array/random_option_value"
            app:entryValues="@array/random_option"
            app:key="pref_random"
            app:title="@string/pref_random_title"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_xkcd"
        app:key="pref_key_xkcd"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="pref_xkcd_gif_eco_mode"
            app:summaryOff="@string/pref_xkcd_gif_eco_mode_off"
            app:summaryOn="@string/pref_xkcd_gif_eco_mode_on"
            app:title="@string/pref_xkcd_gif_eco_mode_title"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_key_what_if"
        app:title="@string/pref_what_if"
        app:iconSpaceReserved="false">

        <ListPreference
            app:defaultValue="zoom_100"
            app:key="pref_zoom"
            app:entries="@array/zoom_value"
            app:entryValues="@array/zoom"
            app:title="@string/pref_what_if_zoom"
            app:iconSpaceReserved="false" />

        <ListPreference
            app:defaultValue="ignore_content"
            app:key="pref_what_if_search"
            app:entries="@array/search_pref_value"
            app:entryValues="@array/search_pref"
            app:title="@string/pref_what_if_search"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>