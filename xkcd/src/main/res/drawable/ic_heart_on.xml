    android:width="48dp"
    android:viewportHeight="100"
    android:viewportWidth="100" >
    <path
        android:fillColor="@color/pink"
        android:pathData="@string/heart"/>
    <group
        android:name="heart_group"
        android:pivotX="50"
        android:pivotY="50"
        android:scaleX="0.0"
        android:scaleY="0.0">
        <path
            android:name="heart"
            android:fillColor="@color/pink"
            android:pathData="@string/heart"/>
    </group>
</vector>
